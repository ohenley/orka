with "orka_awt";
with "config/orka_awt_config";

project Orka_Awt.Wayland is

   for Source_Dirs use ("src/wayland", "src/wayland", "src/shared");

   for Object_Dir use "build/wayland/obj/" & Orka_Awt_Config.Build_Profile;
   for Library_Dir use "build/wayland/lib";

   package Compiler renames Orka_Awt.Compiler;
   package Binder   renames Orka_Awt.Binder;

   package Install is
      for Artifacts (".") use ("data");
   end Install;

end Orka_Awt.Wayland;
