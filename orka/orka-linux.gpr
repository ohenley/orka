with "orka_egl";

project Orka.Linux extends "orka" is

   OpenGL_Sources := OpenGL_Sources & "src/gl/egl";
   Orka_Sources   := Orka_Sources &
                       "src/orka/linux" &
                       "src/orka/interface/egl" &
                       "src/orka/implementation/egl";

   for Source_Dirs use OpenGL_Sources & Orka_Sources;

   for Object_Dir use "build/obj";
   for Library_Dir use "build/lib";

end Orka.Linux;
